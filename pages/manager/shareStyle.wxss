/* switch */
.form-switch-material {
  position: relative;
  width: 60px;
  height: 32px;
  margin-right: 10px;
  background: #ffffff;
  border-radius: 16px;
  box-shadow: 0 1px 3px rgba(0, 9, 61, 0.3);
  cursor: pointer;
}

.form-switch-material>.line::before {
  position: absolute;
  content: "";
  top: 14px;
  width: 24px;
  height: 4px;
  background: #ffffff;
  transition: 0.3s;
}

.form-switch-material>.line::before {
  left: 4px;
  border-radius: 2px 0 0 2px;
  transform: scaleX(0);
  transform-origin: left;
}

.form-switch-material>.ball {
  position: absolute;
  content: "";
  top: 4px;
  left: 4px;
  width: 24px;
  height: 24px;
  background: #ffffff;
  border-radius: 50%;
  box-shadow: inset 0 0 0 4px #2a81ca;
  transition: 0.3s;
}

.form-switch-material.checked>.line::before {
  transform: scaleX(1);
}

.form-switch-material.checked>.ball {
  box-shadow: inset 0 0 0 12px #2a81ca;
  transform: translateX(28px);
}



